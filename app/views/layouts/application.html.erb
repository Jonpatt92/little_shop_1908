<!DOCTYPE html>
<html>
  <head>
    <title>Little Shop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class = "topnav">
      <%= link_to "All Merchants", "/merchants"%>
      <%= link_to "All Items", "/items"%>
    </nav>

    <div class="flash">
      <% flash.each do |type, message| %>
      <section id="#flash-<%= type %>">
        <p><%= message %></p>
      </section>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
